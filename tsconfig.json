{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "noImplicitAny": true,
        "outDir": "./output/esm",
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": false,
        "strict": false,
        "esModuleInterop": true,
        "sourceMap": true,
        "moduleResolution": "NodeNext",
        "strictNullChecks": true,
        "skipLibCheck": true,
        "baseUrl": "./"
    },
    "include": [
        "src/**/*"
    ]
}